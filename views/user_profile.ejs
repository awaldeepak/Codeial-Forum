<link rel="stylesheet" href="/css/user_profile.css">
<h1>Codeial / User <%= title %></h1>



<!-- If user matches then show the form -->
<% if(user.id == profile_user.id) { %>
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
    <p><%= profile_user.createdAt %></p>
    <p><%= profile_user.updatedAt %></p>

    <form action="/users/update/<%= profile_user.id %>" method="POST">
        <input type="text" name="name" placeholder="Name" value="<%= profile_user.name %>" required>
        <input type="email" name="email" placeholder="Email" value="<%= profile_user.email %>" required>
        <input type="submit" value="Update">
    </form>
<!-- else show only profile info -->
<% } else { %>
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
<% } %>